---
import '@fontsource/inter'
import '@fontsource/fira-code'
import { Image } from '@astrojs/image/components'
import Nav from '@/components/Nav.astro'
import avatar from '@/images/81856932_p0_400x400.jpg'
import type { MarkdownLayoutProps } from 'astro'

type Props = MarkdownLayoutProps<{
  title: string
  description: string
  date: string
}>

const { frontmatter } = Astro.props
---

<html lang='en' class='scroll-smooth font-serif antialiased'>
  <head>
    <meta charset='utf-8' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='viewport' content='width=device-width' />
    <meta name='generator' content={Astro.generator} />
    <title>{frontmatter.title}</title>
    <script is:inline>
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme')
        }
        return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light'
      })()

      document.documentElement.setAttribute('style', `color-scheme: ${theme};`)
      document.documentElement.setAttribute('data-theme', theme)
      window.localStorage.setItem('theme', theme)
    </script>
  </head>
  <body class='px-8'>
    <Nav />
    <main class='max-w-2xl mx-auto'>
      <h1 class='mb-6 text-3xl font-bold tracking-tight md:text-5xl'>{frontmatter.title}</h1>
      <div class='flex flex-col items-start justify-between w-full mb-4 md:flex-row md:items-center'>
        <div class='flex items-center'>
          <Image src={avatar} alt='NekoChan' class='w-6 h-6 rounded-full' />
          <p class='ml-2 text-sm text-gray-700 dark:text-gray-300'>NekoChan / August 07, 2019</p>
        </div>
        <p class='text-sm text-gray-600 dark:text-gray-400 min-w-32 md:mt-0'>12 min read</p>
      </div>
      <article class='prose lg:prose-xl prose-img:rounded-md mx-auto dark:prose-invert max-w-none w-full'>
        <slot />
      </article>
    </main>
  </body>
</html>
